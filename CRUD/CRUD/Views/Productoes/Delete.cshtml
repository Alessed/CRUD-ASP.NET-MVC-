@model CRUD.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <h1 class="text-center mb-4 text-danger">Eliminar Producto</h1>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center text-warning mb-4">¿Estás seguro de que deseas eliminar este producto?</h3>
                    <h4 class="text-center mb-4">Producto</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DblCantidad)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DblCantidad)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DatFechaRegistro)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DatFechaRegistro)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StrNombre)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StrNombre)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DblPrecio)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DblPrecio)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StrClave)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StrClave)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IntProducto" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger w-50 mb-3">Eliminar Producto</button>
                        </div>
                    </form>
                    <div class="text-center">
                        <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

